{
    "name": "zenstruck/uri",
    "description": "Object-oriented wrapper/manipulator for parse_url with additional features.",
    "homepage": "https://github.com/zenstruck/uri",
    "type": "library",
    "license": "MIT",
    "keywords": ["uri", "url", "parser", "mailto", "signed"],
    "authors": [
        {
            "name": "Kevin Bond",
            "email": "kevinbond@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^9.6.21",
        "symfony/http-foundation": "^5.4|^6.0|^7.0",
        "symfony/http-kernel": "^5.4|^6.0|^7.0",
        "symfony/phpunit-bridge": "^6.1|^7.0",
        "symfony/web-link": "^5.4|^6.0|^7.0",
        "twig/twig": "^2.16.1|^3.0"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": { "Zenstruck\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Zenstruck\\Uri\\Tests\\": "tests/" }
    },
    "suggest": {
        "symfony/http-kernel": "To create and verify signed URIs",
        "symfony/web-link": "(4.4+) to use the UriLink feature"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
